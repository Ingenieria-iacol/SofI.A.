    <script>
        // Variable global para almacenar los datos procesados
        let globalData = [];

        // Referencias al DOM
        const fileInput = document.getElementById('fileInput');
        const fileNameDisplay = document.getElementById('fileNameDisplay');
        const toolbar = document.getElementById('toolbar');
        const tableBody = document.getElementById('tableBody');

        // Escuchar cambios en el input de archivo
        fileInput.addEventListener('change', handleFileSelect, false);

        function handleFileSelect(event) {
            const file = event.target.files[0];
            if (!file) return;

            fileNameDisplay.textContent = "Procesando: " + file.name;

            const reader = new FileReader();

            reader.onload = function(e) {
                const data = new Uint8Array(e.target.result);
                const workbook = XLSX.read(data, { type: 'array' });

                // Tomamos la primera hoja del excel
                const firstSheetName = workbook.SheetNames[0];
                const worksheet = workbook.Sheets[firstSheetName];

                // Convertimos a JSON crudo
                const jsonData = XLSX.utils.sheet_to_json(worksheet, { defval: "" });

                // Procesamos los datos con nuestra l칩gica de ingenier칤a
                processAndRender(jsonData);
            };

            reader.readAsArrayBuffer(file);
        }

        function processAndRender(rawData) {
            // Limpiamos datos anteriores
            globalData = [];

            // Mapeo inteligente de columnas (basado en tu CSV anterior)
            // Buscamos claves que se parezcan a tus headers originales
            rawData.forEach(row => {
                // Intentar encontrar las columnas correctas sin importar may칰sculas/min칰sculas
                const keys = Object.keys(row);
                
                const nameKey = keys.find(k => k.toLowerCase().includes("nombre")) || keys[0]; // Fallback a la primera col
                const urlKey = keys.find(k => k.toLowerCase().includes("url")) || keys[1];
                const folderKey = keys.find(k => k.toLowerCase().includes("carpeta")) || keys[2];

                const nombreArchivo = row[nameKey] || "Sin Nombre";
                const urlArchivo = row[urlKey] || "#";
                const carpeta = row[folderKey] || "N/A";

                // L칩gica de Regex para extraer Sector y Casa
                let sector = "N/A";
                let casa = "N/A";
                
                const sectorMatch = String(nombreArchivo).match(/sector\s*(\d+)/i);
                const casaMatch = String(nombreArchivo).match(/(?:CS|casa)\s*(\d+)/i);

                if (sectorMatch) sector = sectorMatch[1];
                if (casaMatch) casa = casaMatch[1];

                globalData.push({
                    sector: sector,
                    casa: casa,
                    nombre: nombreArchivo,
                    carpeta: carpeta,
                    url: urlArchivo
                });
            });

            renderTable();
            // Activar botones de descarga
            toolbar.classList.add('active');
            fileNameDisplay.textContent += " (Cargado 九덢잺)";
            fileNameDisplay.style.color = "var(--success-color)";
        }

        function renderTable() {
            tableBody.innerHTML = ''; // Limpiar tabla

            if (globalData.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="5" class="empty-state">No se encontraron datos v치lidos.</td></tr>';
                return;
            }

            globalData.forEach(row => {
                const tr = document.createElement('tr');
                // Color sutil si falta info
                if (row.sector === "N/A" && row.casa === "N/A") {
                    tr.style.opacity = "0.7"; 
                }

                tr.innerHTML = `
                    <td style="color: var(--accent-color); font-weight:bold;">${row.sector}</td>
                    <td>${row.casa}</td>
                    <td>${row.nombre}</td>
                    <td>${row.carpeta}</td>
                    <td>
                        ${row.url && row.url !== '#' 
                            ? `<a href="${row.url}" target="_blank" class="doc-link">ABRIR</a>` 
                            : '<span style="color:#666; font-size:0.8rem">SIN URL</span>'}
                    </td>
                `;
                tableBody.appendChild(tr);
            });
        }

        // --- FUNCIONES DE EXPORTACI칍N (Iguales a la versi칩n anterior) ---

        function exportToExcel() {
            if (globalData.length === 0) return alert("No hay datos para exportar");

            const dataToExport = globalData.map(d => ({
                Sector: d.sector,
                Casa: d.casa,
                "Nombre Archivo": d.nombre,
                Carpeta: d.carpeta,
                URL: d.url
            }));

            const ws = XLSX.utils.json_to_sheet(dataToExport);
            const wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, "Documentos_Kagua");
            XLSX.writeFile(wb, "Reporte_Kagua.xlsx");
        }

        function exportToPDF() {
            if (globalData.length === 0) return alert("No hay datos para exportar");

            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            doc.setFillColor(30, 30, 30); // Fondo oscuro cabecera simulaci칩n
            doc.rect(0, 0, 210, 297, "F"); // Fondo p치gina (opcional, mejor dejar blanco para imprimir)
            
            // Reiniciar a blanco para impresi칩n limpia
            doc.setFillColor(255, 255, 255);
            doc.rect(0, 0, 210, 297, "F");

            doc.setFontSize(14);
            doc.setTextColor(0, 0, 0);
            doc.text("FONDO DOCUMENTAL COMSERVICIOS", 14, 15);
            
            doc.setFontSize(10);
            doc.setTextColor(76, 175, 80); // Verde success
            doc.text("Documentos OK para subir a Kagua", 14, 22);

            const tableColumn = ["Sector", "Casa", "Nombre Archivo", "Carpeta"];
            const tableRows = [];

            globalData.forEach(d => {
                tableRows.push([d.sector, d.casa, d.nombre, d.carpeta]);
            });

            doc.autoTable({
                head: [tableColumn],
                body: tableRows,
                startY: 30,
                theme: 'grid',
                headStyles: { fillColor: [0, 188, 212], textColor: 255 }, // Azul accent
                styles: { fontSize: 8 }
            });

            doc.save("Reporte_Kagua.pdf");
        }
    </script>
</body>
