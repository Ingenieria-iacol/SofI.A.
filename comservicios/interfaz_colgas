    <div class="container">
        <header>
            <div class="logo-container">
                <img src="ImagenesPlataformas/img_logo_colgas.jpg" alt="Logo Colgas" onerror="this.style.display='none'">
            </div>
            <h1>Fondo Documental Comservicios</h1>
            <h2>DOCUMENTOS OK PARA SUBIR A KAGUA</h2>
        </header>

        <div class="upload-section">
            <label for="fileInput" class="custom-file-upload">
                游닌 Cargar Archivo (Excel o CSV)
            </label>
            <input type="file" id="fileInput" accept=".csv, .xlsx, .xls" />
            <div id="fileNameDisplay" class="file-name-display">Ning칰n archivo seleccionado</div>
        </div>

        <div class="toolbar" id="toolbar">
            <button class="btn" onclick="exportToExcel()">Descargar XLS</button>
            <button class="btn" onclick="exportToPDF()">Descargar PDF</button>
        </div>

        <div class="table-container">
            <table id="docTable">
